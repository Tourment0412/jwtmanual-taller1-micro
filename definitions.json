{
  "users": [
    {
      "name": "admin",
      "password": "admin_pass",
      "tags": "administrator"
    },
    {
      "name": "domain_user",
      "password": "domain_pass",
      "tags": ""
    },
    {
      "name": "orchestrator_user",
      "password": "orch_pass",
      "tags": ""
    },
    {
      "name": "notifications_user",
      "password": "notif_pass",
      "tags": ""
    }
  ],
  "vhosts": [
    { "name": "foro" }
  ],
  "permissions": [
    {
      "user": "admin",
      "vhost": "foro",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "domain_user",
      "vhost": "foro",
      "configure": "",
      "write": "^dominio\\.events$",
      "read": ""
    },
    {
      "user": "orchestrator_user",
      "vhost": "foro",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "notifications_user",
      "vhost": "foro",
      "configure": "",
      "write": "",
      "read": "^notifications\\..*"
    }
  ],
  "exchanges": [
    {
      "name": "dominio.events",
      "vhost": "foro",
      "type": "topic",
      "durable": true
    },
    {
      "name": "orquestador.events",
      "vhost": "foro",
      "type": "topic",
      "durable": true
    },
    {
      "name": "dlx",
      "vhost": "foro",
      "type": "topic",
      "durable": true
    }
  ],
  "queues": [
    {
      "name": "orquestador.queue",
      "vhost": "foro",
      "durable": true
    },
    {
      "name": "notifications.queue",
      "vhost": "foro",
      "durable": true,
      "arguments": {
        "x-dead-letter-exchange": "dlx"
      }
    }
  ],
  "bindings": [
    {
      "source": "dominio.events",
      "vhost": "foro",
      "destination": "orquestador.queue",
      "destination_type": "queue",
      "routing_key": "auth.*"
    },
    {
      "source": "orquestador.events",
      "vhost": "foro",
      "destination": "notifications.queue",
      "destination_type": "queue",
      "routing_key": "notifications.*"
    }
  ]
}
